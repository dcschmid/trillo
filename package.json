{
  "name": "natours",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel liveserver watch",
    "watch": "node-sass sass/main.scss css/style.css -w --source-map true",
    "liveserver": "live-server",
    "kss": "kss --config kss-config.json",
    "stylelint": "stylelint 'sass/**/*.scss'; exit 0;",
    "compile": "node-sass sass/main.scss css/style.css --source-map true",
    "postcss": "postcss css/style.css -o css/style.css",
    "build": "npm-run-all compile postcss stylelint"
  },
  "repository": "git@bitbucket.org:dschmid/natours.git",
  "author": "Daniel Schmid <daniel.schmid@libertymail.net>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.0.4",
    "htmlhint": "^0.9.13",
    "imagemin": "^6.0.0",
    "imagemin-webp": "^4.1.0",
    "kss": "^3.0.0-beta.23",
    "live-server": "^1.2.0",
    "michelangelo": "^0.7.0",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "postcss-custom-properties": "^7.0.0",
    "stylelint": "^9.3.0",
    "stylelint-a11y": "^1.1.7",
    "stylelint-config-rational-order": "^0.0.2",
    "stylelint-config-sass-guidelines": "^5.0.0"
  },
  "browserslist": [
    "last 2 version",
    "> 1%"
  ]
}
